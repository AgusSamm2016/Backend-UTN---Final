<section class="mt-5 container">
  <div class="row justify-content-center">
    <div class="col-10 col-lg-5">
      <form class="border border-dark rounded p-4 text-center" action="/api/users/reset/{{token}}" method="post">
      <img src="https://usa.afsglobal.org/SSO/SelfPasswordRecovery/images/send_reset_password.svg?v=3" alt="car-key" border="0">
        <input type="text" value="{{tokenStatus.name}}" autocomplete="username" hidden/>
        <input class="form-control mt-3" type="password" maxlength="16" placeholder="Type new password" autocomplete="new-password" name="password_1" autofocus/>

        {{#errHelper arrWarnings "password_1"}}
          {{msg}}
        {{/errHelper}}

        <div id="passwordHelpBlock" class="form-text mb-4">
          Your password must be 8-16 characters long.
        </div>

        <input class="form-control" type="password" maxlength="16" placeholder="Repeat new password" autocomplete="new-password" name="password_2"/>

        {{#errHelper arrWarnings "password_2"}}
          {{msg}}
        {{/errHelper}}

        <div id="repeatPasswordHelpBlock" class="form-text mb-5">
          Both passwords must be identical.
        </div>
        <div class="d-flex justify-content-center">
          <input
            type="submit"
            class="btn btn-dark"
            value="Complete"
          />
        </div>
      </form>
    </div>
  </div>
</section>